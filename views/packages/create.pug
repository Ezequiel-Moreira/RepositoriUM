extends ../layout

block content
    div.w3-row-padding
      form(method="post" action="/packages/create" enctype="multipart/form-data")
          p
              label Titulo
              input.w3-input(type="text" placeholder="Insira o titulo..." title="title")
          p
              label UC
              input.w3-input(type="text" placeholder="Insira a UC..." UC="UC")

          p //adicionar capacidade para vários autores e supervisores mais tarde
          p
              label Autor
              input.w3-input(type="text" placeholder="Insira o autor..." autor="autor")
              input.w3-input(type="text" placeholder="Insira o id deste autor..." id="id")
              input.w3-input(type="text" placeholder="Insira o email deste autor..." mail="mail")

          p
              label Supervisor
              input.w3-input(type="text" placeholder="Insira o supervisor..." superv="superv")
              input.w3-input(type="text" placeholder="Insira o email deste supervisor..." MS="MS")

          p //adicionar capacidade de colocar várias keywords mais tarde
          p
              label Keyword
              input.w3-input(type="text" placeholder="Insira keyword..." key="key")

          p
              label Abstract
              input.w3-input(type="text" placeholder="Insira o abstract..." abstract="abstract")

          p
              label Pasta
              input.w3-input(type="text" placeholder="Insira a pasta onde o ficheiro está localizado em..." folder="folder")

          p //adicionar ... várias files mais tarde
          p
              label File
              input.w3-input(type="text" placeholder="Insira o caminho do ficheiro relativo à pasta..." path="path")
              input.w3-input(type="text" placeholder="Insira uma descrição do ficheiro..." desc="desc")

          p Por favor selecione que visualização pretende dar ao ficheiro que está a criar
          p
              label State
              select.w3-select(name="sort" style="margin-top: 8px; margin-bottom: 16px;")
                  option(value="public" selected=searchSort == 'public') Publico
                  option(value="private" selected=searchSort == 'private') Privado

          p
              input(type="submit" value="Submeter Ficheiro")
