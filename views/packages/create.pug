extends ../layout

block content
    div.w3-row-padding
      form(method="post" action="/packages/create" enctype="multipart/form-data")
          p
              label Titulo
              input.w3-input(type="text" placeholder="Insira o titulo..." title="title")
          p
              label UC
              input.w3-input(type="text" placeholder="Insira a UC..." UC="UC")

          p //adicionar capacidade para vários autores e supervisores mais tarde
          p
              label Autor
              div.w3-row-padding
                div.w3-third
                  input.w3-input(type="text" placeholder="Insira o nome do autor..." autor="autor")
                div.w3-third
                  input.w3-input(type="text" placeholder="Insira o id do autor..." id="id")
                div.w3-third
                  input.w3-input(type="text" placeholder="Insira o email do autor..." mail="mail")

          p
              label Supervisor
              div.w3-row-padding
                div.w3-half
                  input.w3-input(type="text" placeholder="Insira o nome do supervisor..." superv="superv")
                div.w3-half
                  input.w3-input(type="text" placeholder="Insira o email do supervisor..." MS="MS")

          p //adicionar capacidade de colocar várias keywords mais tarde
          p
              label Keyword
              input.w3-input(type="text" placeholder="Insira keyword..." key="key")

          p
              label Abstract
              input.w3-input(type="text" placeholder="Insira o abstract..." abstract="abstract")

          p //adicionar para poder-se colocar uma pasta em vez de um ficheiro
          p
              label Pasta
              input.w3-input(type="file" placeholder="Insira a pasta onde está localizado o projeto..." fol="fol")

          p Por favor selecione que visualização pretende dar ao ficheiro que está a criar
          p
              label Estado
              select.w3-select(name="sort" style="margin-top: 8px; margin-bottom: 16px;")
                  option(value="public" selected=searchSort == 'public') Publico
                  option(value="private" selected=searchSort == 'private') Privado

          p
              input(type="submit" value="Submeter Ficheiro")
